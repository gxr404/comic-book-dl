// tsconfig.json
{
  "compilerOptions": {
    "moduleResolution": "Node",
    "module": "ESNext",
    "esModuleInterop": true,
    // "allowSyntheticDefaultImports": true
    "target": "ES2020",
    "strict": true,
    "noImplicitOverride": true,
    "noUnusedLocals": true,
    "useUnknownInCatchVariables": false,
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["./src/*"],
    },
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "types",
    "removeComments": true
  },
  "include": [
    "src/**/*"
  ],
  "ts-node": {
    "esm": true
  },
  "tsc-alias": {
    "resolveFullPaths": true,
    "verbose": false
  }
}